<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImgDoctor"
                android:layout_width="110dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/promo4" />

            <TextView
                android:id="@+id/txtNamaDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ImgDoctor"
                android:text="Dr. Yulisna Leman"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lines"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtNamaDoctor"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/ImgDoctor"
                android:background="@color/line" />

            <TextView
                android:id="@+id/txtSpesialis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lines"
                android:layout_toRightOf="@+id/ImgDoctor"
                android:paddingLeft="10dp"
                android:text="Spesialis : Dokter Kandungan" />

            <TextView
                android:id="@+id/txtAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSpesialis"
                android:layout_toRightOf="@+id/ImgDoctor"
                android:paddingLeft="10dp"
                android:text="Alamat : Jl. Bukit Damai Indah R/ 51, Surabaya" />

            <TextView
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ImgDoctor"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/five"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_Msg"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/green_old"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_messages" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_Tlf"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/green_old"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_call" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

