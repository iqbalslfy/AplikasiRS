<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.projectrs.aplikasirs.JadwaldanReservasi.LayananRetina">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Nama Dokter : " />

                    <Spinner
                        android:id="@+id/SpinDokter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_margin="5dp"
                        android:entries="@string/rpi"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvJadwalDokter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/SpinDokter" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Dokter :"
                        android:textSize="14.5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/IsiNamaDokter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dokter Fulan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal :"
                        android:textSize="14.5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/IsiTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17/2/2017" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hari :"
                        android:textSize="14.5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/IsiHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SELASA" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waktu :"
                        android:textSize="14.5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/IsiWaktu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:15 s/d 13:00" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rvJadwalDokter"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ripple_effect"
                android:text="BOOKING"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
